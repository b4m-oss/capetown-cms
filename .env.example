# Docker環境全般に必要な環境変数

# アプリケーションの設定
APP_NAME=CapetownCMS
APP_ENV=local
APP_KEY=base64:YOUR_APP_KEY
APP_DEBUG=true
APP_URL=http://localhost
APP_PORT=8000

# MySQLの設定
DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=capetown
DB_USERNAME=user
DB_PASSWORD=password

# Postgres設定（必要な場合）
# Uncomment if using Postgres
# DB_CONNECTION=pgsql
# POSTGRES_DB=capetown
# POSTGRES_USER=user
# POSTGRES_PASSWORD=password
# PG_PORT=5432

# Mailpitの設定（開発用メールキャッチャー）
MAIL_HOST=mailpit
MAIL_PORT=1025
MAILPIT_PORT=8025

# Adminerの設定
ADMINER_PORT=8080

# その他、将来的に必要な可能性のある設定
# REDIS_HOST=redis
# REDIS_PORT=6379
# MEILISEARCH_HOST=http://meilisearch:7700
